{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"],
    },
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "**/dist/**"]
}
